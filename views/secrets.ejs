<%- include('partials/header') %>

<div class="jumbotron centered">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <p class="secret-text">
      <% usersWithSecrets.forEach((user) =>{ %>
        <% for(let i=0;i<user.secret.length;i++){ %>
        <p class="secret-text"><%= user.secret[i] %></p>
        <% } %>
      <% }) %>
    <hr>
    
    <a class="btn btn-light btn-lg border-dark" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
